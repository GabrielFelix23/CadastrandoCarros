{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="container">
    <h2>Editar Postagem</h2>
    <hr>
</div>
    <div class="d-flex justify-content-center">
        <div class="col-sm-7">
            <div class="card mt-4">
                <div class="card-body">
                    <form action="/postagem/editada" method="POST">
                        <input type="hidden" name="id" value="{{postagem._id}}">
                        
                        <h4>{{postagem.nome}}</h4><br>

                        <label for="titulo">Titulo</label>
                        <input type="text" id="titulo" name="titulo" class="form form-control" value="{{postagem.titulo}}" required>

                        <label for="nome">Nome do carro</label>
                        <input type="text" id="nome" name="nome" class="form form-control" value="{{postagem.nome}}" required>

                        <label for="ano">Ano do carro</label>
                        <input type="text" id="ano" name="ano" class="form form-control" value="{{postagem.ano}}" required>

                        <label for="km">Quantos Km/h</label>
                        <input type="text" id="km" name="km" class="form form-control" value="{{postagem.km}}" required>

                        <label for="preco">Pre√ßo do carro</label>
                        <input type="text" id="preco" name="preco" class="form form-control" value="{{postagem.preco}}" required>

                        <button type="submit" class="btn btn-success mt-4">Editar</button>
                        <a href="/postagem">
                            <button type="button" class="btn btn-primary mt-4">Voltar</button>
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div><br>