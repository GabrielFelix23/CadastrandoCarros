{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="container mt-3">
    <h3>{{postagem.titulo}}</h3>
    <hr>
</div>

<div class="container mt-5">
    <div class="d-flex justify-content-center">
        <div class="col-sm-5">
            <div class="card">
                <div class="card-body">
                    
                    <form action="" method="POST">
                        <label for="nome">Carro:</label>
                        <h5>{{postagem.nome}}</h5><br>

                        <label for="nomeCompleto">Seu nome completo:</label>
                        <input type="text" name="nomeCompleto" id="nomeCompleto" class="form-control">

                        <label for="email">Seu E-mail:</label>
                        <input type="email" name="email" id="email" class="form-control">

                        <label for="assunto">Assunto: </label>
                        <textarea name="assunto" id="assunto" cols="50" rows="5" class="form-control"></textarea>
                    </form>

                    <button type="button" class="btn btn-success mt-4">Enviar</button>
                    
                    <a href="/"> 
                        <button class="btn btn-warning mt-4">Voltar</button>
                    </a>
                    
                </div>
            </div>
        </div>
    </div>
</div><br>