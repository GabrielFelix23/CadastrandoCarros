{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Fazer perfil:</h3>
<div class="card">
    <div class="card-body">
        <form action="/usuarios/editar" method="post">
            <input type="hidden" name="id" value="{{editarUser._id}}">

            <label for="nome">Nome: </label>
            <input type="text" name="nome" class="form-control" value="{{editarUser.nome}}" required>

            <label for="email">E-mail: </label>
            <input type="email" name="email" class="form-control" value="{{editarUser.email}}"required>

            <label for="senha">Senha: </label>
            <input type="password" name="senha" class="form-control" value="{{editarUser.senha}}"required>

            <label for="confSenha">Confirme sua senha: </label>
            <input type="password" name="confSenha" class="form-control" value="{{editarUser.confSenha}}"required>

            <button type="submit" class="btn btn-success mt-4">Criar</button>
            <a href="/usuarios/registro/usuario">
                <button type="button" class="btn btn-primary mt-4">Cancelar</button>
            </a>
        </form>
    </div>
</div>